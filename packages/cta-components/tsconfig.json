{
  "extends": "tsconfig/lit-library.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "src",
    "outDir": "types",
    "typeRoots": [
      "global.d.ts"
    ],
    "paths": {
      "@components/*": ["components/*"],
      "@controllers/*": ["controllers/*"],
      "@lib/*": ["lib/*"],
    }
  },
  "exclude": ["src/**/*.stories.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
